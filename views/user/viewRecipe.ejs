<%- include('header.ejs') %>
<head>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  
</head>

<!-- Create By Joker Banny -->
<body class="bg-white">
  <!-- Header Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
    <a href="/" class="navbar-brand ms-4 ms-lg-0">
        <h1 class="fw-bold text-primary text-4xl  m-0" style="color: blue;">Med<span class="text-muted">Dine</span></h1>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse text-md" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href="/" class="nav-item nav-link active text-danger">Home</a>
            <a href="/disease" class="nav-item nav-link ">Diseases & meals</a>
            <a href="/recipes" class="nav-item nav-link">Recipes</a>
            <a href="/favourite" class="nav-item nav-link">My Favourites</a>
            <a href="/profile" class="nav-item nav-link"><small class="fa fa-user text-body"></small>&nbsp; <%= session ? session.username : 'Profile' %></a>

        </div>
        <div class="d-none d-lg-flex ms-2">
            
            <% if(session){ %>
                <a href="/getLogout"><button class="btn btn-danger btn-sm ml-3 " style="width: 5rem;border-radius: 5px;margin-left: 40px;" >Logout</button></a>
                <% }else{ %>
            <a href="/getLogin"><button class="btn btn-primary btn-sm ml-3" style="width: 5rem;border-radius: 5px;margin-left: 40px;" >Login</button></a>
            <% } %>
        </div>
    </div>
</nav>


<!-- Title -->
<div class="pt-32  bg-white  flex justify-center ">
  <!-- <div class="col-lg-6"> -->
    <div class="section-header text-center mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
        <h1 class="display-5 mb-3"><%= recipe.recipe%></h1>
    </div>
<!-- </div> -->
</div>



<!-- Product List -->
<section class="py-10 bg-gray-100 flex flex-wrap justify-content-evenly">
    <div class="lg:w-4/12 w-full lg:pl-5" style="display: flex;justify-content: center;">
        <div class="bg-white p-5 rounded-lg shadow-lg">
            
           
            <img src="<%=recipe.image %>" alt="Recipe Image" class=" self-center mx-auto">
        </div>
    </div>
    <div class="lg:w-8/12 w-full lg:pl-5">
        <div class="bg-white p-5 rounded-lg shadow-lg">
            
            <div>
                <h3 class="text-md font-semibold mb-2" style="font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Ingredients : <%= recipe.ingrediants %> </h3>
                
            </div>
            <div class="mt-5">
                <h3 class="text-xl font-semibold mb-2" style="font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Preparation</h3>
                <p>
                    <%= recipe.preparation %>
                </p>
                
            </div>
            <div class="mt-5">
                <h3 class="text-md font-semibold mb-2" style="font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Nutrients : <%= recipe.nutrition %></h3>
                
            </div>
        </div>
    </div>
</section>


<!-- Footer -->
<footer class="py-6  bg-gray-200 text-gray-900">
	<div class="container px-6 mx-auto space-y-6 divide-y divide-gray-400 md:space-y-12 divide-opacity-50">
		<div class="grid justify-center  lg:justify-between">
			<div class="flex flex-col self-center text-sm text-center md:block lg:col-start-1 md:space-x-6">
				<span>Copy rgight Â© 2023 by MedDine </span>
				
			</div>
			
		</div>
	</div>
</footer>

  
</body>
<%- include('footer.ejs') %>