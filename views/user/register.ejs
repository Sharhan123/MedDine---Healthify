<%- include('header.ejs') %>

    <head>
        <link rel="shortcut icon" href="/assets/images/fav.png" type="image/x-icon">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&amp;display=swap"
            rel="stylesheet">
        <link rel="shortcut icon" href="/assets/images/fav.jpg">
        <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
        <link rel="stylesheet" type="text/css" href="/assets/css/style.css" />
    </head>

    <body class="bg-white">
        <div class="container-fluid vh-100 " style="height: 100%;">
            <div class="row vh-100 " style="height: 100%;">
                <div class="col-lg-6 col-sm-12  vh-100">
                    <form action="/register" method="post" data-eerror="<%= Eerror %>" data-perror="<%= Perror %>"
                        data-uerror="<%= Uerror %>" data-aerror="<%= Aerror %>" data-terror="<%= Terror %>">
                        <div class="row d-flex vh-100">

                            <div class="col-md-8 p-4 ikigui m-auto text-center align-items-center">
                                <h4 class="text-center fw-bolder mb-5 fs-2">Register</h4>
                                <div class="input-group mb-4">
                                    <span class="input-group-text border-end-0 inbg" id="basic-addon1">
                                        <i class="fas fa-user"></i>
                                        <!-- Replace "fa-user" with the appropriate age-related icon class -->
                                    </span>
                                    <input id="userInput" name="username" type="text"
                                        class="form-control ps-2 border-start-0 fs-7 inbg form-control-lg mb-0"
                                        placeholder="Enter Full Name" aria-label="Username"
                                        aria-describedby="basic-addon1">
                                    <p style="text-align: left;font-size: smaller; margin-left: .5em; margin-top: .5em; display: none;color: red;"
                                        id="error-user"></p>

                                </div>
                                <div class="input-group mb-4">
                                    <span class="input-group-text border-end-0 inbg " id="basic-addon2"><i
                                            class="bi bi-envelope"></i></span>
                                    <input name="email" type="text"
                                        class="   form-control ps-2 border-start-0 fs-7 inbg form-control-lg mb-0"
                                        id="emailInput" placeholder="Enter Email Address" aria-label="Username"
                                        aria-describedby="basic-addon1">
                                    <p style="text-align: left;font-size: smaller; margin-left: .5em; margin-top: .5em; display: none;color: red;"
                                        id="error-email">
                                        <%= Eerror %>
                                    </p>
                                </div>
                                <div class="input-group mb-4">
                                    <!-- Using the hourglass icon -->
                                    <span class="input-group-text border-end-0 inbg" id="basic-addon3">
                                        <i class="bi bi-hourglass-bottom"></i>
                                    </span>
                                    <input name="age" type="text"
                                        class="   form-control ps-2 border-start-0 fs-7 inbg form-control-lg mb-0"
                                        id="ageInput" placeholder="Enter your age " aria-label="Username"
                                        aria-describedby="basic-addon1">
                                    <p style="text-align: left;font-size: smaller; margin-left: .5em; margin-top: .5em; display: none;color: red;"
                                        id="error-age">
                                        <%= Aerror %>
                                    </p>
                                </div>
                                <div class="input-group mb-4">
                                    <!-- Using the hourglass icon -->
                                    <span class="input-group-text border-end-0 inbg" id="basic-addon4">
                                        <i class="bi  bi-suit-heart"></i>
                                    </span>
                                    <select name="type" id="typeInput" class="form-select form-control ps-2 border-start-0 fs-7 inbg form-control-lg mb-0" aria-label="Select option">
                                        <option selected>Select Your Food Type</option>
                                        <option value="VEG">VEG</option>
                                        <option value="NON-VEG">NON-VEG</option>
                                    </select>
                                    <p style="text-align: left;font-size: smaller; margin-left: .5em; margin-top: .5em; display: none;color: red;"
                                        id="error-type">
                                        <%= Terror %>
                                    </p>
                                </div>
                                <div class="input-group mb-4">
                                    <span class="input-group-text border-end-0 inbg" id="basic-addon5"><i
                                            class="bi bi-lock"></i></span>
                                    <input name="pass" type="password"
                                        class="form-control ps-2 fs-7 border-start-0 form-control-lg inbg mb-0"
                                        placeholder="Enter Password" aria-label="Username"
                                        aria-describedby="basic-addon1">
                                </div>
                                <div class="input-group mb-4">
                                    <span class="input-group-text border-end-0 inbg" id="basic-addon6"><i
                                            class="bi bi-lock"></i></span>
                                    <input id="passInput" name="cpass" type="password"
                                        class="form-control ps-2 fs-7 border-start-0 form-control-lg inbg mb-0"
                                        placeholder="Confirm Password" aria-label="Username"
                                        aria-describedby="basic-addon1">
                                    <p style="text-align: left;font-size: smaller; margin-left: .5em; margin-top: .5em; display: none;color: red;"
                                        id="error-pass"></p>
                                </div>

                                <button class="btn btn-lg fw-bold fs-7 btn-success  w-100"
                                    type="submit">Register</button>

                                <p class="text-center py-4 fw-bold fs-8">Or Sign in with social platforms</p>

                                <ul class="d-inline-block mx-auto">
                                    <li class="float-start px-3"><a href=""><i class="bi bi-facebook"></i></a></li>
                                    <li class="float-start px-3"><a href=""><i class="bi bi-twitter"></i></a></li>
                                    <li class="float-start px-3"><a href=""><i class="bi bi-linkedin"></i></a></li>
                                    <li class="float-start px-3"><a href=""><i class="bi bi-google"></i></a></li>

                                </ul>
                            </div>

                        </div>
                    </form>

                </div>
                <div class="col-lg-6 bg-white p-5 text-center controller">
                    <h4 class="text-center fw-bolder fs-2">Login</h4>
                    <p class="mb-3 fs-7">Already gave an account ?</p>
                    <a href="/getLogin">
                        <button class="btn fw-bold mb-5 btn-outline-success px-4 rounded-pill">Sign Up</button>
                    </a>
                    <div class="img-cover p-4">
                        <img src="/assets/images/healthy-lifestyle-illustration-with-organic-vegetables-or-fruit-sport-and-workout-in-flat-cartoon-hand-drawn-background-design-templates-vector.jpg"
                            alt="">
                    </div>
                </div>
            </div>
        </div>





        <script src="/assets/js/jquery-3.2.1.min.js"></script>
        <!-- <script src="/assets/js/popper.min.js"></script> -->
        <script src="/assets/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/plugins/scroll-fixed/jquery-scrolltofixed-min.js"></script>
        <script src="/assets/plugins/testimonial/js/owl.carousel.min.js"></script>
        <script src="/assets/js/script.js"></script>


        <script>
            // Retrieve error data from the form's data attributes
            const form = document.querySelector('form');
            const eError = form.getAttribute('data-eerror');
            const pError = form.getAttribute('data-perror');
            const uError = form.getAttribute('data-uerror');
            const aError = form.getAttribute('data-aerror');
            const tError = form.getAttribute('data-terror');

            console.log(eError + 'hello');

            // Email error handling
            let email = document.getElementById('emailInput');
            let err = document.getElementById('error-email');
            let icon = document.getElementById('basic-addon2');
            if ('<%= Eerror %>') {
                email.classList.add('border-danger');
                err.textContent = eError + " *";
                err.style.display = 'block';
                icon.classList.add('border-danger', 'text-danger');
            }

            // Password error handling
            let pass = document.getElementById('passInput');
            let perr = document.getElementById('error-pass');
            let picon = document.getElementById('basic-addon6');
            if (pError) {
                pass.classList.add('border-danger');
                perr.textContent = pError + " *";
                perr.style.display = 'block';
                picon.classList.add('border-danger', 'text-danger');
            }

            let user = document.getElementById('userInput');
            let uerr = document.getElementById('error-user');
            let uicon = document.getElementById('basic-addon1')

            if (uError) {
                user.classList.add('border-danger');
                uerr.textContent = uError + " *";
                uerr.style.display = 'block';
                uicon.classList.add('border-danger', 'text-danger');
            }
            let age = document.getElementById('ageInput');
            let aerr = document.getElementById('error-age');
            let aicon = document.getElementById('basic-addon3')

            if (aError) {
                age.classList.add('border-danger');
                aerr.textContent = aError + " *";
                aerr.style.display = 'block';
                aicon.classList.add('border-danger', 'text-danger');
            }
            let type = document.getElementById('typeInput');
            let terr = document.getElementById('error-type');
            let ticon = document.getElementById('basic-addon4')

            if (tError) {
                type.classList.add('border-danger');
                terr.textContent = tError + " *";
                terr.style.display = 'block';
                ticon.classList.add('border-danger', 'text-danger');
            }

        </script>
    </body>